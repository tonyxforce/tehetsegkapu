{
    "compileOnSave": true,
    "compilerOptions": {
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es5", "dom"],
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": ".",
        "removeComments": false,
        "sourceMap": false,
        "types": ["node"],
        "module": "CommonJS",
        "target": "es2022",
        "ignoreDeprecations": "5.0",
        "esModuleInterop": true,
        "allowJs": true
    },
    "exclude": ["node_modules/*", "*.js"],
    "include": ["./*"]
}